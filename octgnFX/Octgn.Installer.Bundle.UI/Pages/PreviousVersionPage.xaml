<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="Octgn.Installer.Bundle.UI.Pages.PreviousVersionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      >
    <UserControl.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#FFFFCCCC"/>
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#FFFFCCCC"/>
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Padding" Value="0"/>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <TextBlock>Previous Version Detected</TextBlock>
        <Rectangle Height="20"/>
        <TextBlock FontSize="14" TextWrapping="Wrap">Please uninstall OCTGN and try again.</TextBlock>
        <Rectangle Height="5"/>
        <TextBlock FontSize="10" TextWrapping="Wrap">&#160;&#160;&#160;&#160;Uninstalling DOES NOT delete games, settings, or images.</TextBlock>
        <Rectangle Height="10"/>
        <TextBlock FontSize="14" TextWrapping="Wrap">How to Uninstall OCTGN:</TextBlock>
        <TextBlock FontSize="10" TextWrapping="Wrap">&#160;&#160;&#160;&#160;Start Menu -> Octgn -> Uninstall</TextBlock>
        <Rectangle Height="10"/>
        <TextBlock FontSize="12" TextWrapping="Wrap">If you still see this message, then delete <LineBreak/>&#160;&#160;&#160;&#160;<Bold>My Documents\OCTGN\OCTGN</Bold></TextBlock>
    </StackPanel>
</UserControl>